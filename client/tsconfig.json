{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@autobattler/shared": ["../shared/index.ts"],
      "@autobattler/shared/*": ["../shared/*"]
    }
  },
  "include": ["src", "main.tsx"]
}
